#ejercicio tienda

#funcion para calcular el precio con el descuento
def calculoPrecio(precio_Original,porcentaje_Descuento):
    descuento = precio_Original - precio_Original * porcentaje_Descuento
    return descuento

def calculoImpuesto(precio_Descuento,porcentaje_Impuesto):
    IVA = precio_Descuento * porcentaje_Impuesto
    return precio_Descuento + IVA

def total():
    precio_Original = float(input('precio producto'))
    descuento = float(input('descuento producto'))
    impuesto = float(input('impuesto producto'))
    
    precio_con_descuento = calculoPrecio(precio_Original,descuento)
    precioImpuestoDescuento = calculoImpuesto(precio_Descuento,impuesto)
    
    print('bienvenido su precio final es: ', precio_Original)
    print('el precio con descuento es: ', precio_Descuento)
    print('el precio final con el descuento y el impuesto es: ', precioImpuestoDescuento)
    
total()
