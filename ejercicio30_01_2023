cantidadProducto = int(input('digite la cantidad de productos que desea comprar: '))


if cantidadProducto % 12 != 0:
    cantidadDocenas = int(cantidadProducto / 12)
print(cantidadDocenas)

if cantidadDocenas > 3 :
    
    descuento = cantidadDocenas * 0.15
    cantidadProducto = cantidadProducto + 1
    print('la cantidad de docenas es: ', cantidadDocenas)
    print('el total de productos es : ', cantidadProducto)
else:
    descuento = cantidadDocenas * 0.10

