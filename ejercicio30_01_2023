#ejercicio 3

horasTrabajadas = int(input('digite las horas trabajadas en el mes: '))

if horasTrabajadas < 10:
    pago = horasTrabajadas * 5
    print('el saldo a pagar es de : $ {pago} dolares')

elif horasTrabajadas >= 10 & horasTrabajadas <= 20:
    pago = horasTrabajadas * 10
    print('el saldo a pagar es de : $ {pago} dolares')

else:
    pago = horasTrabajadas * 15
    print('el saldo a pagar es de :' '$' , pago ,'dolares')


# ejercicio tipo de numero
numero = int(input('digite un numero: '))

if numero == 0 :
    print('es cero')
elif numero < 0:
    print('es negativo')
else:
    print('el numero es positivo')



